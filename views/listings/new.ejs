<% layout("/layouts/boilerplate.ejs") -%>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create New Listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            placeholder="Add a catchy title"
            name="listing[title]"
            type="text"
            class="form-control"
            id="title"
            required
          />
          <div class="invalid-feedback">Title is required</div>
          <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter description"
            id="description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description is required</div>
          <div class="valid-feedback">Description looks good</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            name="listing[image]"
            type="file"
            id="image"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Image is required</div>
          <div class="valid-feedback">Image looks good</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              placeholder="1200"
              name="listing[price]"
              type="number"
              id="price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price is required</div>
            <div class="valid-feedback">Valid Price</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              placeholder="India"
              name="listing[country]"
              type="text"
              id="country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country is required</div>
            <div class="valid-feedback">Country looks good</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            placeholder="Jaipur, Rajasthan"
            name="listing[location]"
            type="text"
            id="location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location is required</div>
          <div class="valid-feedback">Location looks good</div>
        </div>

        <button class="btn btn-dark mb-3 mt-3 add-btn">Add</button>
      </form>
    </div>
  </div>
</body>
