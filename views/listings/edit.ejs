<% layout("/layouts/boilerplate.ejs") -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          value="<%= listing.title %>"
          name="listing[title]"
          type="text"
          id="title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title is required</div>
        <div class="valid-feedback">Title looks good</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id="description"
          class="form-control"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">Description is required</div>
        <div class="valid-feedback">Description looks good</div>
      </div>

      <div class="mb-3">
        <p>Original Listing Image</p>
        <img src="<%= originalImageUrl %>" />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          name="listing[image]"
          type="file"
          id="image"
          class="form-control"
        />
        <div class="invalid-feedback">Image is required</div>
        <div class="valid-feedback">Image looks good</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            value="<%= listing.price %>"
            name="listing[price]"
            type="number"
            id="price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price is required</div>
          <div class="valid-feedback">Valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            value="<%= listing.country %>"
            name="listing[country]"
            type="text"
            id="country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country is required</div>
          <div class="valid-feedback">Valid country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          value="<%= listing.location %>"
          name="listing[location]"
          type="text"
          id="location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location is required</div>
        <div class="valid-feedback">Valid location</div>
      </div>
      <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </form>
  </div>
</div>
